<% reduced_footer = content_for?(:reduced_footer) ? (yield :reduced_footer) : false %>
<!DOCTYPE html>
<html>
  <head>
    <title>ActionAgenda</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="v-app">
      <%= render partial: '/partials/topbar/topbar-primary' %>
      
      <%= yield %>
      
      <%= render partial:'partials/global/footer', locals: {
        reduced: reduced_footer,
        links: footer_nav, 
        logos: site_logos
      } %>
    </div>
  </body>
</html>
